<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/githubButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_github_repository"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/livePhotoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_live_photos"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/customNamingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enable_custom_naming"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/customNamingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#0D000000"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_format_label"
                android:textStyle="bold"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/customFormatEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/custom_format_hint"
                android:minLines="1"
                android:gravity="top|start"
                android:inputType="textVisiblePassword|textMultiLine"
                android:textSize="15sp" />

            <Button
                android:id="@+id/resetFormatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_format" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/custom_format_description"
                android:textColor="#7A7A7A"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/available_tokens_label"
                android:textStyle="bold"
                android:textSize="15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/availableTokensRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="80dp"
                android:clipToPadding="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/custom_format_drag_hint"
                android:textColor="#7A7A7A"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_save_path_info"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
